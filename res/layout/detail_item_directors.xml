<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginTop="10dp" >

    <TextView
        android:id="@+id/txtDirectorsCaption"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/app_directors"
        android:textAppearance="@style/ZappTVDetailCaptionHeader" />

    <TextView
        android:id="@+id/txtDirectorsContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:textColor="#606060"
        android:textAppearance="@style/ZappTVDetailCaptionContent" />

</LinearLayout>
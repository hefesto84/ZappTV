<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:padding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/channelIcon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:src="@drawable/la1" />

        <ImageView
            android:id="@+id/channelSeparator"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="fill_parent"
            android:src="@drawable/drawer_shadow" />

        <TextView
            android:id="@+id/channelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_weight="0.5"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="La 1"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!--  
        <TextView
            android:id="@+id/channelIconDynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="#"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        -->

        <ImageView
            android:padding="2dp"
            android:tag="checked"
            android:id="@+id/chkStatus"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/checkbox_off" />

    </LinearLayout>

</LinearLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content" >

        <TextView
                android:id="@+id/txtHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAppearance="@style/ZappTVDetailCaptionHeader" 
            	android:textSize="16sp"
                android:textColor="#99CCFF"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />

        <LinearLayout
            android:id="@+id/block"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_toRightOf="@id/txtHour"
            android:layout_marginRight="0dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loremlong"
                android:textAppearance="@style/ZappTVDetailCaptionHeader" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loremshort"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAppearance="@style/ZappTVDetailCaptionContent" />


        </LinearLayout>

</RelativeLayout>


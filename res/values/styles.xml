<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionBarZappTVTheme</item>
    </style>

    <style name="ActionBarZappTVTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#000000</item>
        <item name="android:titleTextStyle">@style/ZappTVActionBarTitle</item>
    </style>
    
    <style name="ZappTVDetailCaptionHeader" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ZappTVActionBarTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ZappTVDetailCaptionContent" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ZappTVSectionListItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="ZappTVSectionHeader" parent="android:Widget.TextView">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#000</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ZappTVDetailOption" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="ZappTVMostRatedHeader" parent="android:Widget.TextView">
        <item name="android:textColor">#8eb1c8</item>
        <item name="android:background">#000</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstarts</item>
        <item name="android:height">24dp</item>
        <item name="android:width">24dp</item>
    </style>
    
    <style name="ButtonBarButton" />

</resources>
